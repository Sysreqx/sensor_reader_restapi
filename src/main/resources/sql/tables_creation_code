drop table Measurement;
drop table Sensor;

-- One to Many
create table Sensor
(
    id   int generated by default as identity primary key,
    name varchar(100) not null
);

-- Many To One
create table Measurement
(
    id          int generated by default as identity primary key,
    temperature int       not null check ( temperature <= 100 and temperature >= -100 ),
    is_raining  bool      not null,
    created_at  timestamp not null,
    sensor_id   int not null references Sensor(id)
);

insert into Measurement(temperature, is_raining, created_at)
values (25, true, current_timestamp);
insert into Measurement(temperature, is_raining, created_at)
values (28, false, current_timestamp);

select *
from Measurement;

